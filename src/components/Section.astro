---
const { title } = Astro.props;

---


<section>
    {title && <h2>{title}</h2> }
    <slot />
        
</section>


<style>
    section{
        max-width: 620px;
        margin: 0 auto 60px;        
    }


    h2 {
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }

</style>