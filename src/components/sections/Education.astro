---
import Section from "../Section.astro"


import { education } from "@cv"
---

<Section title="# Education">

        <ul>
            {
            education.map(
                ({ institution, area, url, startDate, endDate}) => {
                return (
                <li>
                    <h3>{institution}</h3>
                    <h4>{area}</h4>
                    <p>Start Date:{startDate}</p>
                    <p>{endDate}</p>
                    <a href={url}><h5>{url}</h5></a>
                    
                </li>
                )
            }
        )
    }

</Section>

<style>

    ul{
        display: flex;
        flex-direction: column;
        text-wrap: wrap;

    }

    h3 {
        font-weight: 500;
        color: #111;
    }

    h4 {
        font-weight: 450;
        color: #222;
        margin-top: 3px;
        margin-bottom: 8px;
    }

    h5 {
        font-weight: 400;
        color: #222;
        margin-top: 3px;
        margin-bottom: 8px;
    }

    h5:hover {
        color: rgb(85, 169, 141);
    }

    

    p {
        margin-top: 3px;

    }
    
</style>